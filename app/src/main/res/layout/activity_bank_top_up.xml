<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/citi_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/topup_amount"
            android:textColor="@color/discovery_application_item_name_color"
            android:textSize="16sp" />

    </LinearLayout>


    <View
        android:layout_width="330dp"
        android:layout_height="0.75dp"
        android:layout_marginTop="10dp"
        android:background="@color/mine_menu_divider_color" />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="70dp">

         <ImageView
             android:id="@+id/icon_yuan"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginLeft="30dp"
             android:layout_marginTop="15dp"
             android:src="@mipmap/yuan" />

         <EditText
             android:id="@+id/top_up_amount"
             android:layout_width="336dp"
             android:layout_height="60dp"
             android:layout_marginTop="15dp"
             android:background="@null"
             android:textColor="@color/discovery_application_item_name_color"
             android:textSize="18sp" />
     </LinearLayout>

    <View
        android:layout_width="330dp"
        android:layout_height="0.75dp"
        android:layout_marginTop="10dp"
        android:background="@color/mine_menu_divider_color" />


    <TextView
        android:id="@+id/btn_confirm_topup"
        android:layout_width="314dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/mine_header_bg_shape"
        android:gravity="center"
        android:onClick="onClick"
        android:text="确认充值"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>