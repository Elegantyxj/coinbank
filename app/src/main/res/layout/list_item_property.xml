<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_log"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_ico_logo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/wallet_asset_amount" />

        <TextView
            android:id="@+id/tv_property_usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/civ_ico_logo"
            android:layout_toRightOf="@+id/civ_ico_logo"
            android:text="0.00"
            android:textColor="@color/property_ico_name_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_ico_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:text="RMB"
            android:textColor="@color/property_ico_name_color"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.75dp"
        android:background="@color/mine_menu_divider_color" />

</LinearLayout>